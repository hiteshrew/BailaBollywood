<!doctype html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css" integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk" crossorigin="anonymous">

    <title>Admin Comments</title>
  </head>
  <body>

    <h1 class="text-center">Delete Comments</h1>
    <div class="container">
        <% comments.forEach(comment=>{%>
            <div class="media" style="background-color: grey; border-radius: 10px; margin-top: 20px;">
              <div class="media-body">
                <h5 style="font-weight: bold; padding-left: 10px; padding-top: 10px;"><%=comment.name%></h5>
               <p style="padding-top:5px; padding-left: 10px;"> <%= comment.text %></p>
              </div>
              
            </div>
           
            <form class="text-center" action="/blogs/posts/comments/<%=comment._id%>?_method=DELETE" method="POST">
                <input class="btn btn-danger" style="width: 25%;" type="submit" value="Delete">
            </form>
          <%})%>
</div>

    <!-- Optional JavaScript -->
    <!-- jQuery first, then Popper.js, then Bootstrap JS -->
    </body>
</html>